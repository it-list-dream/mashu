/* components/no-class/no-class.wxss */
.no_info {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.no_title {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
}

.no_title .image {
  width:200rpx;
  height: 240rpx;
}

.no_info .no_course {
  margin-top: 40rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  color: #333333;
}

.no_info .pleaseLogin {
  margin-top: 60rpx;
  width: 260rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #12D58B;
  border-radius: 35px;
  font-size: 36rpx;
  font-family: PingFang SC;
  color: #FFFFFF;
}
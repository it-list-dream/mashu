/* pages/shop/shop.wxss */
.store_list {
  width: 690rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  height: auto;
  background: #ffffff;
  box-shadow: 0px 0px 40rpx 0px rgba(51, 51, 51, 0.1);
  border-radius: 10rpx;
  margin-bottom: 60px;
}

.store_list>view {
  padding: 0 30rpx;
  overflow: hidden;
}

.store_list .store_count {
  margin-top: 30rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  text-align: right;
}

.store_item {
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx 0;
  border-bottom: 1px solid #DEDEDE;
}

.store_item:last-child {
  border: none;
}

.store_item .store_flag image {
  width: 250rpx;
  height: 184rpx;
}
.store_flag{
  position: relative;
}
.store_flag .my_store {
  position: absolute;
  top: 0;
  left: 0;
  width: 110rpx;
  height: 40rpx;
  background: #EFC37D;
  border-radius: 0 10rpx 10rpx 0;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.store_content {
  padding-left: 30rpx;
  flex: 1;
}

.store_content>view:first-child {
  margin-bottom: 30rpx;
}

.store_content>view {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.store_content .distance {
  margin-top: 43rpx;
  color: #999999;
}
/* pages/shop/shop.wxss */
.store_list {
  width: 690rpx;
  margin: 20rpx auto 60rpx;
  height: auto;
  background: #ffffff;
  box-shadow: 0px 0px 40rpx 0px rgba(51, 51, 51, 0.1);
  border-radius: 10rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.store_list .store_count {
  padding-top: 30rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  text-align: right;
}

.store_item {
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx 0;
  border-bottom: 1px solid #DEDEDE;
}

.store_item:last-child {
  border: none;
}

.store_item .store_flag image {
  width: 250rpx;
  height: 184rpx;
}

.store_flag {
  position: relative;
}

.store_flag .my_store {
  position: absolute;
  top: 0;
  left: 0;
  padding: 0 16rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #EFC37D;
  border-radius: 0 0 10rpx 0;
  font-size: 24rpx;
  font-family: PingFang SC;
  color: #FFFFFF;
}

.store_content {
  width: 100%;
  height: 184rpx;
  margin-left: 30rpx;
  flex: 1;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
}
.store_name {
  overflow: hidden;
  white-space: nowrap;
}

.address {
  margin-top: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
}


.store_content>view {
  font-size: 28rpx;
  font-family: PingFang SC;
  color: #333333;
}


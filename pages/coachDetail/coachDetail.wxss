/* pages/coachDetail/coachDetail.wxss */
.coach_detail {
  padding: 20rpx 30rpx 30rpx;
}

.coach_info {
  position: relative;
  display: flex;
  width: 100%;
  align-items: center;
  height: 150rpx;
  border-bottom: 1px solid #E5E5E5;
}

.coach_image {
  width: 690rpx;
  height: 460rpx;
  border-radius: 12rpx;
}

.coach_info image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}



.coach_item {
  display: flex;
  height: 90rpx;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 30rpx;
}

.coach_item view:first-child {
  font-size: 36rpx;
  font-family: PingFang SC;
  color: #333333;
}

.coach_item view:last-child {
  font-size: 28rpx;
  font-family: PingFang SC;
  color: #949494;
}

.phone-box{
  position: absolute;
  top: 50%;
  right: 24rpx;
  transform: translateY(-50%);
  width: 64rpx;
  height: 64rpx;
}
.phone-box>image{
  width: 100%;
  height: 100%;
}

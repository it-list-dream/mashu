/* pages/coachDetail/coachDetail.wxss */
.coach_detail {
  padding: 20rpx 30rpx 30rpx;
}

.coach_image {
  width: 690rpx;
  height: 460rpx;
}

.coach_info image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.coach_info {
  display: flex;
  width: 100%;
  align-items: center;
  height: 150rpx;
  border-bottom: 1px solid #E5E5E5;
}

.flex>view {
  margin-left: 30rpx;
}

.people text:first-child {
  font-size: 36rpx;
  font-family: PingFang SC;
  color: #333333;
}

.people text:last-child {
  margin-left: 20rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  color: #949494;
}

.cost {
  margin-top: 10rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.red {
  color: #F93E3E;
}

.dec_title {
  padding: 60rpx 0 30rpx;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}

.dec_content {
  line-height: 52rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  color: #333333;
}

.nav_title {
  padding: 30rpx 0;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}

.recommendList {
  margin: 0 auto;
}

.recommendedCourse {
  display: flex;
  box-sizing: border-box;
  padding: 25rpx 30rpx;
  margin-bottom: 30rpx;
  width: 690rpx;
  height: 230rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.1);
  border-radius: 10rpx;
}

.recommendedCourse .recom_img {
  width: 270rpx;
  height: 180rpx;
}

.recommendedCourse .flex-direction {
  margin-left: 30rpx;
  flex: 1;
}

.level_course {
  font-size: 36rpx;
  font-family: PingFang SC;
  color: #333333;
}

.course_price {
  margin-top: 20rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
}
.flex-direction>view{
  display: flex;
  justify-content: space-between;
}
.flex-direction image{
  width: 36rpx;
  height: 36rpx;
}
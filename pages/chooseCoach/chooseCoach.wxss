/* pages/chooseCoach/chooseCoach.wxss */
.coach_list {
  overflow: hidden;
  margin-top: 20rpx;
}

.coach_item {
  position: relative;
  display: flex;
  box-sizing: border-box;
  padding: 25rpx 30rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
  width: 690rpx;
  height: 230rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.1);
  border-radius: 10rpx;
}

.coach_item image {
  width: 270rpx;
  height: 180rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.detail_info {
  position: relative;
  margin-left: 30rpx;
  flex: 1;
  overflow: hidden;
  font-family: PingFang SC;
  font-weight: 500;
}

.detail_name {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #333333;
}
.detail_name image{
  width: 36rpx;
  height: 36rpx;
  flex-shrink: 0;
}
.detail_info .info1 {
  margin-top: 28rpx;
  font-size: 30rpx;
  color: #666666;
}

.red {
  color: #F93E3E;
}

.phone-box{
  position: absolute;
  right: 30rpx;
  bottom: 24rpx;
  width: 64rpx;
  height: 64rpx;
}
.phone-box>image{
  width: 100%;
  height: 100%;
}
.coach_list {
  overflow: hidden;
  margin-top: 20rpx;
}

.coach_item {
  display: flex;
  box-sizing: border-box;
  padding: 25rpx 30rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
  width: 690rpx;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.1);
  border-radius: 10rpx;
}

.coach_item image {
  width: 210rpx;
  height: 140rpx;
}

.detail_info {
  margin-left: 30rpx;
  flex: 1;
  font-family: PingFang SC;
  font-weight: 500;
}

.detail_all{
  font-size: 32rpx;
  color: #333333;
  font-family: PingFang SC;
}
.remaining{
  margin-left: 30rpx;
}
.detail_info>.info1 {
  margin-top: 15rpx;
  font-size: 26rpx;
  color: #666666;
}


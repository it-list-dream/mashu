@import '/template/nothing/nothing.wxss';
page {
  background-color: #F0F2F5;
  font-family: PingFang SC;
}

.appointment_header {
  display: flex;
  justify-content: space-evenly;
  width: 100%;
  height: 116rpx;
  line-height: 116rpx;
  /* background: yellow; */
}

.rewrads_item {
  position: relative;
  font-size: 30rpx;
  font-family: PingFang SC;
  color: #666666;
}

.rewards_active::after {
  content: '';
  position: absolute;
  left: 28rpx;
  bottom: 18rpx;
  width: 30rpx;
  height: 6rpx;
  background: #0C1131;
  border-radius: 4rpx;
}

.rewards_active {
  color: #0C1131;
}

.reward_content {
  box-sizing: border-box;
  padding: 0 30rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
  width: 690rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.1);
}

scroll-view {
  overflow-anchor: auto;
  /* background: yellow; */
}

.my-scroll {
  box-sizing: border-box;
  position: absolute;
  top: 130rpx;
  width: 100%;
  left: 0;
  right: 0;
  bottom: 0;
}

.reward_week {
  display: flex;
  justify-content: space-between;
  height: 87rpx;
  line-height: 86rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  color: #666666;
  border-bottom: 1px solid #E5E5E5;
}

.reward_item {
  padding: 30rpx 0;
  display: flex;
  border-bottom: 1px solid #E5E5E5;
}

.reward_item image {
  width: 300rpx;
  height: 200rpx;
  border-radius: 14rpx;
}

.cancle_list {
  display: flex;
  align-items: center;
  height: 110rpx;
  justify-content: flex-end;
}

.cancel_btn {
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 1px solid #999999;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}

.course_cont {
  margin-left: 30rpx;
}

.course_cont>view {
  font-size: 28rpx;
  font-family: PingFang SC;
  color: #333333;
}

.course_cont>view:nth-child(n+2) {
  margin-top: 16rpx;
}


/* pages/courseBooking/courseBooking.wxss */
.course_booking {
  position: relative;
  padding: 20rpx 30rpx;
}

.booking_item {
  width: 690rpx;
  /* height: 706rpx; */
  height: auto;
  background: #FFFFFF;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.1);
  border-radius: 10rpx;
}

.course_info {
  position: relative;
  display: flex;
  box-sizing: border-box;
  padding: 0 30rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  justify-content: space-between;
}

.course_name1 image {
  width: 18rpx;
  vertical-align: middle;
}

.course_info .icon-arrow {
  margin-left: 26rpx;
  width: 18rpx;
  height: 31rpx;
}

.align-center {
  display: flex;
  /* width: 340rpx;
  background: pink; */
  height: 100rpx;
  align-items: center;
  justify-content: flex-end;
}

.course_name1 .level {
  margin-right: 20rpx;
}

.course_info::after {
  position: absolute;
  bottom: 0;
  left: 36rpx;
  content: '';
  display: block;
  width: 630rpx;
  height: 1px;
  background: #E5E5E5;
}

.askClassRules {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: right;
  font-size: 30rpx;
  font-family: PingFang SC;
}

.red {
  color: #EE423C;
}

.coach {
  margin-right: 16rpx;
}

.all_price {
  margin-top: 30rpx;
  width: 690rpx;
  height: 302rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.1);
  border-radius: 10rpx;
}

.pay_price::after {
  content: '';
  width: 0;
  height: 0;
}

.bottom_list {
  margin-top: 30rpx;
  width: 690rpx;
  height: 200rpx;
  background: #FEFEFE;
  box-shadow: 0px 0px 20rpx 0px rgba(51, 51, 51, 0.1);
  border-radius: 10rpx;
}

.pay_method {
  position: relative;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 100rpx;
  /* border-bottom: 1px solid  #E5E5E5; */
  background: #FFFFFF;
}

.pay_method::after {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  content: '';
  width: 630rpx;
  height: 1px;
  background: #E5E5E5;
}

.pick {
  position: relative;
  width: 180rpx;
  height: 46rpx;
  border: 1px solid #333333;
  box-sizing: border-box;
  margin-left: 30rpx;
}

.pay_item {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  height: 100%;
}

.pay_item text {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.pay_item image {
  width: 30rpx;
  height: 30rpx;
}

.price_total {
  display: flex;
  box-sizing: border-box;
  padding: 0 30rpx;
  justify-content: space-between;
  align-items: center;
  width: 690rpx;
  height: 100rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.1);
  border-radius: 10rpx;
}

.pay_btn {
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #0D1232;
  border-radius: 30rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  color: #FFFFFF;
}

/* 优惠卷 */

.close {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  z-index: 1;
}

.coupon_list {
  display: flex;
  flex-direction: column;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 920rpx;
  z-index: 100;
  background: #FFFFFF;
  padding: 60rpx 0;
  box-sizing: border-box;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.2);
}

.coupon_list .coupon_title {
  margin-bottom: 30rpx;
  text-align: center;
  font-size: 36rpx;
  font-family: PingFang SC;
  color: #333333;
}

.scroll-y {
  /* background: pink; */
  height: 670rpx;
}

.scroll_wrapper {
  padding: 20rpx 0;
  box-sizing: border-box;
}

/*  */
.coupon {
  position: relative;
  width: 600rpx;
  height: 174rpx;
  margin: 0 auto;
  margin-bottom: 60rpx;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.2);
}

.coupon image {
  width: 100%;
  height: 100%;
}

.coupon_count {
  position: absolute;
  top: 64rpx;
  left: 40rpx;
}

.coupon_level {
  position: absolute;
  top: 64rpx;
  left: 214rpx;
}

.coupon_tip {
  position: absolute;
  top: 0;
  right: 0;
  width: 30rpx;
  padding: 20rpx 26rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  color: #FFFFFF;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.no_used {
  width: 600rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #EFC37D;
  border-radius: 35rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  color: #FFFFFF;
}
/* pages/courseBooking/courseBooking.wxss */
.course_booking {
  padding: 20rpx 30rpx;
}

.booking_item {
  width: 690rpx;
  height: 706rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.1);
  border-radius: 10rpx;
}

.course_info {
  position: relative;
  display: flex;
  box-sizing: border-box;
  padding: 0 30rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  justify-content: space-between;
}

.course_name1 image {
  width: 18rpx;
  vertical-align: middle;
}
.course_name1 .level{
  margin-right: 20rpx;
}
.course_info::after {
  position: absolute;
  bottom: 0;
  left: 36rpx;
  content: '';
  display: block;
  width: 630rpx;
  height: 1px;
  background: #E5E5E5;
}

.askClassRules {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: right;
  font-size: 30rpx;
  font-family: PingFang SC;
}

.red {
  color: #EE423C;
}

.coach {
  margin-right: 16rpx;
}

.all_price {
  margin-top: 30rpx;
  width: 690rpx;
  height: 302rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.1);
  border-radius: 10rpx;
}

.pay_price::after {
  content: '';
  width: 0;
  height: 0;
}

.price_total {
  margin-top: 30rpx;
  display: flex;
  box-sizing: border-box;
  padding: 0 30rpx;
  justify-content: space-between;
  align-items: center;
  width: 690rpx;
  height: 100rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.1);
  border-radius: 10rpx;
}

.pay_btn {
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #0D1232;
  border-radius: 30rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  color: #FFFFFF;
}
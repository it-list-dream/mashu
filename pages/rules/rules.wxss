/* pages/rules/rules.wxss */
.rules_list {
  overflow: hidden;
  margin-top: 30rpx;
  padding: 0 40rpx 0 30rpx;
}

.rules_title {
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: #0B1030;
  border-radius: 10rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  color: #FFFFFF;
}

.paragraphs:first-child {
  margin-top: 24rpx;
}

.paragraphs {
  font-size: 26rpx;
  font-family: PingFang SC;
  color: #333333;
  line-height: 44rpx;
}

.rule_content {
  height: auto;
  padding: 0;
  font-size: 26rpx;
  font-family: PingFang SC;
  color: #333333;
  line-height: 44rpx;
  white-space: pre-wrap;
}
/* pages/order/order.wxss */
@import '/template/nothing/nothing.wxss';

.order_list {
  padding: 30rpx 0;
}

.order_item {
  margin: 0 auto;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  padding: 60rpx 30rpx;
  width: 690rpx;
  height: 582rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.1);
}

.store_info {
  display: flex;
  justify-content: space-between;
  font-family: PingFang SC;
  color: #333333;
}

.store_info text {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
}

.store_info text:last-child {
  color: #909090;
}

.order_id {
  padding: 20rpx 0;
  font-size: 26rpx;
  font-family: PingFang SC;
  color: #666666;
}

.cla_info {
  display: flex;
  padding: 30rpx 0;
  border-top: 1px solid #E5E5E5;
  border-bottom: 1px solid #E5E5E5;
}

.left_info image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
}

.right_info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 30rpx;
  font-weight: 500;
  font-family: PingFang SC;
}

.right_info .courseName {
  padding-left: 30rpx;
}

.price_box {
  align-self: flex-end;
  color: #909090;
  font-family: PingFang SC;
  font-weight: 500;
}

/* .price_box>view:first-child {
  padding-bottom: 16rpx;
} */

.price_box>view {
  text-align: right;
}

.price_box>view:last-child{
  margin-top: 15rpx;
}
.pay_box>view{
  margin-top: 16rpx;
}
.pay_box .pay_money {
  font-size: 30rpx;
  color: #222222;
}

.pay_box .pay_date {
  font-size: 26rpx;
  color: #909090;
}

/*  */
.weui-loadmore {
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  margin-top: 30rpx;
}

.weui-loading {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore-tips {
  display: inline-block;
  vertical-align: middle;
  font-size: 28rpx;
}
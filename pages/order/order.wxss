/* pages/order/order.wxss */
.order_list {
  padding: 30rpx 0;
}

.order_item {
  margin: 0 auto;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  padding: 30rpx;
  width: 690rpx;
  height: 404rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.1);
}

.store_info {
  display: flex;
  justify-content: space-between;
  font-family: PingFang SC;
  color: #333333;
}

.store_info text {
  font-size: 30rpx;
}

.order_id {
  padding: 20rpx 0;
  font-size: 26rpx;
  font-family: PingFang SC;
  color: #666666;
}

.cla_info {
  display: flex;
  border-top: 1px solid #E5E5E5;
  padding-top: 30rpx;
}
.left_info image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
}

.right_info {
  flex: 1;
  font-family: PingFang SC;
  color: #333333;
}

.right_info>view:first-child {
  display: flex;
  justify-content: space-between;
}

.right_info text {
  font-size: 30rpx;
}

.count {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #666666;
}
.base_class{
  padding-left: 30rpx;
}
.align-right{
  text-align: right;
  font-family: PingFang SC;
}
.all_price{
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #333333;
}
.all_price text{
  color: #FF282C;
}
.date{
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #666666;
}
/* page2/courseList/courseList.wxss */
.courseList {
  padding: 20rpx 30rpx 30rpx;
}

.recommendedCourse {
  display: flex;
  box-sizing: border-box;
  padding: 25rpx 30rpx;
  margin-bottom: 30rpx;
  width: 690rpx;
  height: 230rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.1);
  border-radius: 10rpx;
}

.recommendedCourse .recom_img {
  width: 270rpx;
  height: 180rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.recommendedCourse .flex-direction {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 30rpx;
  flex: 1;
}

.level_course {
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 34rpx;
  font-family: PingFang SC;
  color: #333333;
}

.course_price {
  /* margin-top: 20rpx; */
  font-size: 30rpx;
  font-family: PingFang SC;
}
.flex-direction{
  flex: 1;
  overflow: hidden;
}
.flex-direction>view:first-child {
  display: flex;
  justify-content: space-between;
}

.flex-direction image {
  width: 36rpx;
  height: 36rpx;
  flex-shrink: 0;
}

.red {
  color: #F93E3E;
}

.flex-direction .couse_time {
  /* margin-top: 20rpx; */
  font-size: 26rpx;
  font-family: PingFang SC;
  color: #666666;
}

.concat{
  float: right;
  margin-top: 24rpx;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: #0B1030;
  border-radius: 25rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}
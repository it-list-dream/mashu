/* page2/courseList/courseList.wxss */
.courseList {
  padding: 20rpx 30rpx 30rpx;
}

.recommendedCourse {
  display: flex;
  box-sizing: border-box;
  padding: 25rpx 30rpx;
  margin-bottom: 30rpx;
  width: 690rpx;
  height: 230rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.1);
  border-radius: 10rpx;
}

.recommendedCourse .recom_img {
  width: 270rpx;
  height: 180rpx;
}

.recommendedCourse .flex-direction {
  margin-left: 30rpx;
  flex: 1;
}

.level_course {
  font-size: 36rpx;
  font-family: PingFang SC;
  color: #333333;
}

.course_price {
  margin-top: 20rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
}

.flex-direction>view {
  display: flex;
  justify-content: space-between;
}

.flex-direction image {
  width: 36rpx;
  height: 36rpx;
}

.red {
  color: #F93E3E;
}

.flex-direction .couse_time {
  margin-top: 35rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  color: #666666;
}